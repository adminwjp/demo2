<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.shop.user.entity">
    <class name="com.shop.user.entity.Region" table="t_region" >
        <id name="regionId" column="region_id" unsaved-value="0" > <generator class="identity" /></id>
        <property name="regionName" column="region_name" type="java.lang.String" ></property>
        <property name="parentId" column="parent_id" type="java.lang.Long" ></property>
        <property name="sortOrder" column="sort_order" type="int" ></property>
        <property name="ifShow" column="if_show" type="boolean" ></property>
    </class>
</hibernate-mapping>